{
  "name": "git-aiflow",
  "version": "1.0.26",
  "description": "ðŸš€ An AI-powered workflow automation tool for effortless Git-based development, combining smart GitLab/GitHub merge & pull request creation with Conan package management.",
  "main": "dist/index.js",
  "bin": {
    "aiflow": "dist/aiflow-app.js",
    "aiflow-conan": "dist/aiflow-conan-app.js",
    "git-aiflow": "dist/aiflow-app.js",
    "git-aiflow-conan": "dist/aiflow-conan-app.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "README.md",
    "README-EN.md",
    "LICENSE",
    "config.example.yaml"
  ],
  "type": "module",
  "scripts": {
    "node-ts": "node --loader ts-node/esm",
    "node-ts:debug": "node --inspect-brk --loader ts-node/esm",
    "build": "tsc",
    "postbuild": "node -e \"require('fs').chmodSync('dist/aiflow-app.js', '755'); require('fs').chmodSync('dist/aiflow-conan-app.js', '755');\"",
    "start": "npm run aiflow",
    "dev": "npm run aiflow:dev",
    "start-conan": "npm run aiflow-conan",
    "dev-conan": "npm run aiflow-conan:dev",
    "debug-brk": "npm run node-ts -- --inspect-brk src/index.ts",
    "debug": "npm run node-ts -- --inspect src/index.ts",
    "test:config": "npm run node-ts -- src/test/config.test.ts",
    "test:conan": "npm run node-ts -- src/test/conan-service.test.ts",
    "test:conan-update": "npm run node-ts -- src/test/conan-pkg-update.test.ts",
    "test:openai-parse": "npm run node-ts -- src/test/openai-json-parse.test.ts",
    "test:shell-multiline": "npm run node-ts -- src/test/shell-multiline.test.ts",
    "test:git-new-methods": "npm run node-ts -- src/test/git-service-new-methods.test.ts",
    "test:git-base-branch": "npm run node-ts -- src/test/git-service-base-branch.test.ts",
    "test:git-base-branch-debug": "npm run node-ts -- --inspect-brk src/test/git-service-base-branch.test.ts",
    "test:git-branch-ops": "npm run node-ts -- src/test/git-service-branch-operations.test.ts",
    "test:git-branch-graph": "npm run node-ts -- src/test/git-service-branch-graph.test.ts",
    "test:git-all": "npm run node-ts -- src/test/run-git-tests.ts",
    "test:update-checker": "npm run node-ts -- src/test/update-checker.test.ts",
    "changelog": "node scripts/update-changelog.js",
    "changelog:version": "node scripts/update-changelog.js",
    "aiflow": "npm run node-ts -- src/aiflow-app.ts",
    "aiflow:debug": "npm run node-ts -- --inspect=9229 src/aiflow-app.ts",
    "aiflow:debug-brk": "npm run node-ts -- --inspect-brk=9229 src/aiflow-app.ts",
    "aiflow:dev": "npm run node-ts -- --watch src/aiflow-app.ts",
    "aiflow-conan": "npm run node-ts -- src/aiflow-conan-app.ts",
    "aiflow-conan:debug": "npm run node-ts -- --inspect=9230 src/aiflow-conan-app.ts",
    "aiflow-conan:debug-brk": "npm run node-ts -- --inspect-brk=9230 src/aiflow-conan-app.ts",
    "aiflow-conan:dev": "npm run node-ts -- --watch src/aiflow-conan-app.ts",
    "git-info": "npm run node-ts -- src/git-info.ts",
    "clean": "node -e \"fs.rmSync('dist', { recursive: true, force: true })\"",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "ai",
    "workflow",
    "automation",
    "git",
    "gitlab",
    "conan",
    "openai",
    "merge-request",
    "cli",
    "typescript"
  ],
  "author": "heisir",
  "license": "MIT",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.4.0",
    "@types/semver-compare": "^1.0.3",
    "@types/shell-quote": "^1.7.5",
    "@types/update-notifier": "^6.0.8",
    "cross-env": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "clipboardy": "^4.0.0",
    "dotenv": "^17.2.2",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "semver-compare": "^1.0.0",
    "shell-quote": "^1.8.3",
    "update-notifier": "^7.3.1",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HeiSir2014/git-aiflow.git"
  },
  "bugs": {
    "url": "https://github.com/HeiSir2014/git-aiflow/issues"
  }
}
