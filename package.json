{
  "name": "git-aiflow",
  "version": "1.0.8",
  "description": "ðŸš€ AI-powered intelligent workflow automation tool for GitLab merge request creation and Conan package management.",
  "main": "dist/index.js",
  "bin": {
    "aiflow": "dist/aiflow-app.js",
    "aiflow-conan": "dist/aiflow-conan-app.js",
    "git-aiflow": "dist/aiflow-app.js",
    "git-aiflow-conan": "dist/aiflow-conan-app.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "README.md",
    "README-EN.md",
    "LICENSE",
    "config.example.yaml"
  ],
  "type": "module",
  "scripts": {
    "node-ts": "node --loader ts-node/esm",
    "build": "tsc && npm run postbuild",
    "postbuild": "node -e \"require('fs').chmodSync('dist/aiflow-app.js', '755'); require('fs').chmodSync('dist/aiflow-conan-app.js', '755');\"",
    "start": "npm run aiflow",
    "dev": "npm run aiflow:dev",
    "start-conan": "npm run aiflow-conan",
    "dev-conan": "npm run aiflow-conan:dev",
    "debug-brk": "npm run node-ts -- --inspect-brk src/index.ts",
    "debug": "npm run node-ts -- --inspect src/index.ts",
    "test:config": "npm run node-ts -- src/test/config.test.ts",
    "test:gitlab": "npm run node-ts -- src/test/gitlab-service.test.ts",
    "test:conan": "npm run node-ts -- src/test/conan-service.test.ts",
    "test:conan-update": "npm run node-ts -- src/test/conan-pkg-update.test.ts",
    "test:file-update": "npm run node-ts -- src/test/file-update.test.ts",
    "test:openai-parse": "npm run node-ts -- src/test/openai-json-parse.test.ts",
    "test:conan-revision": "npm run node-ts -- src/test/conan-revision.test.ts",
    "test:conan-v2": "npm run node-ts -- src/test/conan-v2-api.test.ts",
    "test:shell-multiline": "npm run node-ts -- src/test/shell-multiline.test.ts",
    "test:gitlab-auto": "npm run node-ts -- src/test/gitlab-auto-detect.test.ts",
    "aiflow": "npm run node-ts -- src/aiflow-app.ts",
    "aiflow:debug": "npm run node-ts -- --inspect=9229 src/aiflow-app.ts",
    "aiflow:debug-brk": "npm run node-ts -- --inspect-brk=9229 src/aiflow-app.ts",
    "aiflow:dev": "npm run node-ts -- --watch src/aiflow-app.ts",
    "aiflow-conan": "npm run node-ts -- src/aiflow-conan-app.ts",
    "aiflow-conan:debug": "npm run node-ts -- --inspect=9230 src/aiflow-conan-app.ts",
    "aiflow-conan:debug-brk": "npm run node-ts -- --inspect-brk=9230 src/aiflow-conan-app.ts",
    "aiflow-conan:dev": "npm run node-ts -- --watch src/aiflow-conan-app.ts",
    "git-info": "npm run node-ts -- src/git-info.ts",
    "clean": "node -e \"fs.rmSync('dist', { recursive: true, force: true })\"",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "ai",
    "workflow",
    "automation",
    "git",
    "gitlab",
    "conan",
    "openai",
    "merge-request",
    "cli",
    "typescript"
  ],
  "author": "heisir",
  "license": "MIT",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.1",
    "cross-env": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "js-yaml": "^4.1.0",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HeiSir2014/git-aiflow.git"
  },
  "bugs": {
    "url": "https://github.com/HeiSir2014/git-aiflow/issues"
  }
}
