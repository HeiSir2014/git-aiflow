# OpenAI Configuration
# OpenAI API key for commit message generation
OPENAI_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI API base URL (optional, defaults to OpenAI's official API)
OPENAI_BASE_URL=https://api.openai.com/v1

# OpenAI model name (optional, e.g., gpt-3.5-turbo, gpt-4, gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# GitLab Configuration
# GitLab personal access token with API permissions
GITLAB_TOKEN=glpat-xxxxxxxxxxxxxxxxxxxx

# GitLab base URL (optional, auto-detected from git remote if not specified)
# GITLAB_BASE_URL=https://gitlab.example.com

# WeCom (WeChat Work) Configuration
# WeCom webhook URL for notifications
WECOM_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Conan Configuration (only for conan-pkg-update-app)
# Conan remote base URL for package management
CONAN_REMOTE_BASE_URL=http://conan.example.com

# Conan remote repository name (optional, default: "repo")
CONAN_REMOTE_REPO=repo

# Git Configuration (optional)
# Whether to squash commits in merge requests (default: true)
SQUASH_COMMITS=true

# Whether to remove source branch after merge (default: true)
REMOVE_SOURCE_BRANCH=true
